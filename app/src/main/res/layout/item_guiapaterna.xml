<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_margin="15dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:id="@+id/ivimageen"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gpimagen"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTituloGuiaPaterna"
                    android:layout_below="@+id/ivimageen"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="TituloRecomendacion"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold"/>

                <com.codesgood.views.JustifiedTextView
                    android:id="@+id/TvDescipcion"
                    android:layout_below="@+id/tvTituloGuiaPaterna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/info02"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"/>
            </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>